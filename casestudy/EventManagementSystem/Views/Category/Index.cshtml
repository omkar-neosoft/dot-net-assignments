@model IEnumerable<EventManagementSystem.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Manage Categories</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Category</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No categories found.</div>
}
else
{
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
