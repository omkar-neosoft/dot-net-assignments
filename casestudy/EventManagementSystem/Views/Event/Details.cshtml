@model EventManagementSystem.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <td><strong>Date:</strong></td>
            <td><i class="fas fa-calendar-alt"></i> @Model.Date.ToString("dd-MM-yyyy")</td>
        </tr>
        <tr>
            <td><strong>Location:</strong></td>
            <td><i class="fas fa-map-marker-alt"></i> @Model.Location</td>
        </tr>
        <tr>
            <td><strong>Ticket Price:</strong></td>
            <td><i class="fas fa-map-marker-alt"></i> ₹@Model.TicketPrice</td>
        </tr>
        <tr>
            <td><strong>Available Seats:</strong></td>
            <td><i class="fas fa-map-marker-alt"></i> @Model.AvailableSeats</td>
        </tr>
        <tr>
            <td><strong>Event Image:</strong></td>
            <td><i class="fas fa-map-marker-alt"></i>
                <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? Url.Content("~/images/default-event.png") : Url.Content($"~{Model.ImagePath}"))"
					 class=""
                     alt="Event Image" style="height: 100px; margin: 20px;">
            </td>
        </tr>
    </table>
</div>
<br
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
