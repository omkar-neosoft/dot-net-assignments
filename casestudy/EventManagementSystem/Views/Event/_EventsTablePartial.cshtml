@model IEnumerable<EventManagementSystem.ViewModels.EventViewModel>

<h2>Event List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Event</a>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Available Seats</th>
            <th>Ticket Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.Location</td>
                <td>@eventItem.Date.ToString("dd-MMM-yyyy HH:mm")</td>
                <td>@eventItem.AvailableSeats</td>
                <td>₹@eventItem.TicketPrice.ToString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>