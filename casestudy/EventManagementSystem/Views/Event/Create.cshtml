    </div>

    <div class="form-group">
        <label asp-for="OrganizerId">Organizer</label>
        <select asp-for="OrganizerId" class="form-control" asp-items="ViewBag.Organizers">
            <option value="">-- Select Organizer --</option>
        </select>
        <span asp-validation-for="OrganizerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Event Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
